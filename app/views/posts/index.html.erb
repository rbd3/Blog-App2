<%= render partial: "users/header", locals: { user: @user } %>
<% @posts.each do |post| %>
  <%= render partial: "post", locals: { post: post } %>
  
  <div class="recent-comments">
  <% if post.recent_comments.any? %>
    <% post.recent_comments.each do |comment| %>
      <p><%= comment.user.name %>: <%= comment.text %></p>
      <% if can? :destroy, comment %>
      <%= button_to 'Delete Post', user_post_path(@user, @post), method: :delete, class: 'delete-post'%>
    <% end %>
    <% end %>
    <% else %>
        <div class="no-comment">No comment yet for this post</div>
    <% end %>
  </div>
<% end %>

<button class = "pagination"><%= link_to "Pagination", user_posts_path(@user) %></button>