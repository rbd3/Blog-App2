<div class="form-wrapper">
  <%= form_with model: Comment.new, url: post_comments_path(@post, @comment) do |f| %>
    <%= f.hidden_field :authenticity_token, value: form_authenticity_token %>
    <%= f.text_area :text, class: "textarea-comment", placeholder: "Write your comment here", rows: 10 %>
    <%= f.submit "Submit Comment", class: "submit-comment" %>
  <% end %>
</div>
